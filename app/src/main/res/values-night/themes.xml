<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema principal -->
    <style name="Theme.Calbon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores principais -->
        <item name="android:colorBackground">@color/calbon_black</item>
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/teal_200</item>

        <!-- Barra de status e navegação -->
        <item name="android:statusBarColor">@color/calbon_black</item>
        <item name="android:navigationBarColor">@color/calbon_black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Fonte -->
        <item name="android:fontFamily">@font/inter</item>

        <!-- Botões -->
        <item name="materialButtonStyle">@style/Button.Calbon</item>
    </style>

    <!-- Botão padrão -->
    <style name="Button.Calbon" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Botão Outlined personalizado -->
    <style name="OutlinedButton1" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/teal_200</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextInputLayout personalizado -->
    <style name="TextInputLayout.Calbon" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/teal_200</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
